{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/style.css">
	<link rel="stylesheet" href="/assets/css/events.css">
{% endblock %}
{% block content %}
	<main class="container">
		<div class="eventTitle">
			<h1 class="lacetitle d-flex align-items-center">Évènements</h1>
		</div>
		<div class="toComeTitle">
			<h2>A Venir</h2>
		</div>
		<div class="row">
			{% for event in events %}
				{% if event.date > 'now'|date("Y-m-d") %}
					{% include "Includes/_card.html.twig" %}
				{% endif %}
			{% endfor %}
			<h2>Passé</h2>
			{% for event in events %}
				{% if event.date < 'now'|date("Y-m-d") %}
					{% include "Includes/_card.html.twig" %}
				{% endif %}
			{% endfor %}
		</div>
	</main>
{% endblock %}
