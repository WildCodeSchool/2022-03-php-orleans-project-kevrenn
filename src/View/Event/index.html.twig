{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/events.css">
{% endblock %}
{% block content %}
	<main class="container">
		<div class="eventTitle">
			<h1>Evenements</h1>
		</div>
		<div class="toComeTitle">
			<h2>A Venir</h2>
		</div>
		<div class="row">
			{% for event in events %}
			{% if event.date > 'now'|date("Y-m-d") %}
					{% include "Includes/_card.html.twig" %}
			{% endif %}
			{% endfor %}
			<h2>Pass√©</h2>
			{% for event in events %}
				{% if event.date < 'now'|date("Y-m-d") %}
					{% include "Includes/_card.html.twig" %}
				{% endif %}
			{% endfor %}
		</div>
	</main>
{% endblock %}
