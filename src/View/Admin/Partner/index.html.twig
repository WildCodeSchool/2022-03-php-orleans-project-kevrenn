{% extends 'layout_admin.html.twig' %}

{% block content %}
	<main class="adminPartner">
		<h1 class="m-5 text-center">Admin partenaires</h1>
		<div class="row container-fluid d-flex justify-content-center m-auto">
			<a class="text-decoration-none btn col-lg-1 col-md-3 justify-self-center" href="/admin/partenaires/ajouter">Ajouter</a>
		</div>
		<div class="row container-fluid d-flex justify-content-center m-auto">
			{% for partner in partners %}
				<div class="card col-lg-3 m-2 d-flex flex-column justify-content-between">
					<div class="d-flex m-3 justify-content-center">
						<div class="d-flex flex-column  mt-2">
							<p class="fs-5">{{ partner.name }}</p>
							<p class="fs-6">{{ partner.url }}</p>
						</div>
					</div>
						<img class="m-2 align-self-center" src="{{ partner.logo_link }}" alt=" {{ partner.name }}" width="50%" height="50%">
					<div class="d-flex justify-content-center align-items-center my-3">
						<a class="text-decoration-none btn" href="/admin/partenaires/modifier?id={{ partner.id }}">Modifier</a>
						<div>
							<form action="/admin/partenaires/supprimer" method="POST" onsubmit="return confirm('Etes-vous sÃ»r de vouloir supprimer ce partenaire ?')">
								<input type="hidden" name="id" value="{{ partner.id }}">
								<button class="btn my-1">Supprimer</button>
							</form>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}

{% block footer %}{% endblock %}
