{% if errors is not empty %}
	<div class="d-flex flex-column align-items-center col-4 mt-2  w-100">
		<ul>
			{% for error in errors %}
				<li>{{ error }}</li>
			{% endfor %}
		</ul>
	</div>
{% endif %}

<form method="post" class="card d-flex flex-column w-50 m-auto p-2">
	<input type="hidden" value="{{ partner.id }}" name="id">
	<label for="name">Nom</label>
	<input type="text" value="{{ partner.name }}" name="name" id="name">
	<label for="url">Adresse du site</label>
	<input type="url" value="{{ partner.url }}" name="url" id="url">
	<label for="logo_link">Lien du logo</label>
	<input type="url" value="{{ partner.logo_link }}" name="logo_link" id="logo_link">

	<button class="btn w-25 my-2 align-self-center">Envoi</button>
</form>
